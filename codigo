def menu():
    print("Nivel 1")
    print("Nivel 2")
    print("Nivel 3")
    print("Nivel 4")
pregunta = int(input("Selecion de nivel: "))
print (pregunta)
if (pregunta == 1):
    minimo = 0
    maximo = 100
    import random
    numeroS = random.randint(0, 100)
    numeroS2 = int(input("introduzca un numero:"))
    intentos = 0
    while True:
        intentos += 1
        if numeroS < numeroS2:
            print("Demasiado alto")
            numeroS2 = int(input("Introduzca un numero: "))
        elif numeroS > numeroS2:
            print("Demasiado bajo")
            numeroS2 = int(input("Introduzca un numero: "))
        elif numeroS == numeroS2:
            print("¡Has ganado!")
            break
        print ("Has necesitado", intentos, "intentos")

